global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['{{ hostvars[groups['monitoring'][0]].monitoring_ip }}:9090']

  - job_name: 'node-exporter-monitoring'
    static_configs:
      - targets: ['{{ hostvars[groups['monitoring'][0]].monitoring_ip }}:9100']

  - job_name: 'cadvisor-monitoring'
    static_configs:
      - targets: ['{{ hostvars[groups['monitoring'][0]].monitoring_ip }}:8080']

  - job_name: 'backend'
    metrics_path: '/actuator/prometheus'
    static_configs:
      - targets: ['{{ hostvars[groups['backend'][0]].backend_ip }}:8080']

  - job_name: 'backuser'
    metrics_path: '/actuator/prometheus'
    static_configs:
      - targets: ['{{ hostvars[groups['backend'][0]].backend_ip }}:8060']

  - job_name: 'node-exporter-backend'
    static_configs:
      - targets: ['{{ hostvars[groups['backend'][0]].backend_ip }}:9100']
